<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        tools:context="com.example.marcvandenberg.googlemaphack.FirstMapsActivity"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">
        <View android:layout_weight="0.03"
            android:layout_height="0dp"
            android:layout_width="0dp"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <EditText
                android:id="@+id/WayID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/way_id_hint"
                android:textAlignment="center"
                android:inputType="number"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View android:layout_weight="0.15"
                    android:layout_height="0dp"
                    android:layout_width="0dp"></View>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/way_id_button"
                    android:textAllCaps="false"
                    android:layout_weight="0.7"
                    android:onClick="AddWay"/>
                <View android:layout_weight="0.15"
                    android:layout_height="0dp"
                    android:layout_width="0dp"></View>
            </LinearLayout>

        </LinearLayout>
        <View android:layout_weight="0.04"
            android:layout_height="0dp"
            android:layout_width="0dp"></View>
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4">
            <LinearLayout
                android:id="@+id/wayList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View android:layout_height="10dp"
                    android:layout_width="0dp"></View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:text="@string/way_id_list_title"
                    android:textColor="#000000"/>
                <View android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#000000"></View>
            </LinearLayout>
        </ScrollView>

        <View android:layout_weight="0.03"
            android:layout_width="0dp"
            android:layout_height="0dp"></View>

    </LinearLayout>
</LinearLayout>
